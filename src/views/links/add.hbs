<div class="conteiner p-4">
  <div class="row">
     <div class="col-md-4 mx-auto">
         <div class="card text-center">
            <div class="card-header">
                <h3>Agregar Link</h3>
            </div>
             <div class="card-body">
                 <form action="/links/add" method="POST">

                   <div class="form-group">
                      <input type="text" class="form-control" name="title" placeholder="Titulo" autofocus>
                   </div>

                   <div class="form-group">
                       <input type="url" name="url" class="form-control " placeholder="URL">
                   </div>
                   <div class="form-group">
                       <textarea name="description" rows="2" class="form-control" placeholder="Descripcion"></textarea>
                   </div>

                   <div class="form-group">
                       <button class="btn btn-success btn-block">Guardar</button>
                   </div>

                 </form>
             </div>
          </div>
       </div>
    </div>
 </div>